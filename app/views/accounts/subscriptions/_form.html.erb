<%# frozen_string_literal: true %>
<%= form_with(model: [@account, subscription], class: "mt-6 space-y-6") do |f| %>
  <% if subscription.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% subscription.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-3">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :product_id, class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :product_id, @products, :id, :name,
                                 { prompt: "Select a product" },
                                 class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :number_of_licenses, class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :number_of_licenses, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :issued_at, class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :issued_at, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :expires_at, class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :expires_at, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end">
    <div class="flex space-x-3">
      <%= link_to 'Cancel', account_subscriptions_path(@account), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>